@model int
@{

    var userID = ViewData["userID"];
}
<!DOCTYPE html>
<html>
<head>
    <title>Home - KhumaloCraft Emporium</title>
    <style>
        body 
        {
            background: url('/images/scroll.png');
            font-family: Optician Sans;
            font-size: 18px;
            color: #1b2f48;
            margin: 0;
        }

        .header-block-container 
        {
            width: 50%;
            padding: 20px;
            float: left;
            box-sizing: border-box;
        }

        .header-block 
        {
            border: 3px solid #1b2f48;
            padding: 60px;
            text-align: center;
            max-width: 600px;
            background-color: #FFFDD0;
            margin-right: auto;
            margin-left: auto;
            height: 250px;
            box-sizing: border-box;
        }

        header h1, header p 
        {
            margin: 0;
        }

        .slideshow-container 
        {
            width: 50%;
            float: right;
            height: 400px;
            overflow: hidden;
            position: relative;
        }

        .slideshow 
        {
            width: 100%;
            height: 100%;
            position: relative;
            overflow: hidden;
        }

        .mySlides 
        {
            padding: 10px;
            width: 700px;
            height: 700px;
            transition: opacity 2s ease-in-out;
            opacity: 0;
            position: absolute;
            top: 0;
            left: 0;
        }

            .mySlides img 
            {
                width: 100%;
                height: auto;
            }

        .fade-in 
        {
            opacity: 1;
        }

        .fade-out 
        {
            opacity: 0;
        }

    </style>
</head>

<body>
    <header>
        <div style="height:100px;"></div>
        <div class="header-block-container">
            <div style="height:40px;"></div>
            <div class="header-block">
                <h1><b>Welcome to KhumaloCraft Emporium</b></h1>
                <div style="height:20px;"></div>
                <p>Your destination for exquisite handmade ceramics</p>
                @if (userID != null)
                {
                    <p>Welcome </p>
                }
            </div>
        </div>
        <div class="slideshow-container">
            <div class="slideshow">
                <div class="mySlides fade-in">
                    <img src="/images/pic1.jpg" alt="Image 1">
                </div>
                <div class="mySlides fade-out">
                    <img src="/images/pic2.jpg" alt="Image 2">
                </div>
                <div class="mySlides fade-out">
                    <img src="/images/pic3.jpg" alt="Image 3">
                </div>
                <div class="mySlides fade-out">
                    <img src="/images/pic4.jpg" alt="Image 4">
                </div>
                <div class="mySlides fade-out">
                    <img src="/images/pic5.jpg" alt="Image 5">
                </div>
            </div>
        </div>
    </header>

    <script>
        var slideIndex = 0;
        showSlides();

        function showSlides() {
            var i;
            var slides = document.getElementsByClassName("mySlides");
            for (i = 0; i < slides.length; i++) {
                slides[i].classList.remove("fade-in");
                slides[i].classList.add("fade-out");
            }
            slideIndex++;
            if (slideIndex > slides.length) { slideIndex = 1 }
            slides[slideIndex - 1].classList.remove("fade-out");
            slides[slideIndex - 1].classList.add("fade-in");
            setTimeout(showSlides, 4000);
        }
    </script>
</body>
</html>
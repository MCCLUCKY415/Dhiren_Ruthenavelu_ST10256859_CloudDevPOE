<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ST10256859_CLDV6211_POE</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ST10256859_CLDV6211_POE_Part1.styles.css" asp-append-version="true" />
    <style>
        body {
            background: url('/images/scroll.png');
            font-family: Optician Sans;
            font-size: 20px;
        }

        nav {
            font-family: Optician Sans;
            text-align: left;
        }

        .navbar {
            background-color: #1b2f48;
        }

        .navbar-nav .nav-link {
            text-decoration: none;
            margin: 10px;
            background-color: #1b2f48;
            color: #ffffff !important;
            padding: 10px 20px;
        }

        .navbar-nav .nav-link:hover {
            background-color: #0c2a2c;
        }

        .navbar-brand {
            color: #ffffff !important;
        }

        footer {
            background-color: #333;
            text-align: center;
            padding: 10px 0;
            width: 100%;
            position: absolute;
            bottom: 0px;
            margin-top: 20px;
        }

        .page-content {
            padding-top: 56px;
        }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom border-top  box-shadow mb-3 fixed-top">
            <div class="container-fluid">
                <a style="font-size:20px" class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><b>KhumaloCraft Emporium</b></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 justify-content-lg-left">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="AboutUs">AboutUs</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="ContactUs">ContactUs</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="MyWork">MyWork</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="ProductAdd">Sell-a-Product</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav align-content-end">
                        <li class="nav-item">
                            <a align="right" class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a align="right" class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Profile">Profile</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid page-content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <p style="color: #FFFDD0">© 2024 KhumaloCraft Emporium. All rights reserved.</p>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

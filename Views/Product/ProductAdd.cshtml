<!DOCTYPE html>
<html>
<head>
    <title>Adding Products - KhumaloCraft Emporium</title>
    <style>
        body {
            background-color: #1b2f48;
            color: #FFFDD0;
        }

        .craftwork-item {
            border-radius: 25px;
            background-color: #1b2f48;
            padding: 15px;
            border: 5px solid #FFFDD0;
            color: #FFFDD0;
            max-width: 350px;
            margin: auto;
        }

            .craftwork-item input {
                display: block;
                width: 100%;
                margin-bottom: 10px;
                padding: 5px;
                border-radius: 5px;
                border: 1px solid #FFFDD0;
            }

            .craftwork-item button {
                width: 100%;
                padding: 10px;
                border-radius: 5px;
                border: solid;
                border-color: #FFFDD0;
                background-color: #333;
                color: #1b2f48;
                cursor: pointer;
            }
    </style>
</head>

<body>
    <div style="height:80px;"></div>
    <h1 align="center" style="color: #FFFDD0">Add Products to KhumaloCraft Emporium</h1>
    <hr style="height:3px;color:#FFFDD0;border-width:0">
    <div style="height:10px;"></div>
    <p align="center">Please fill in the details below to add your product to KhumaloCraft Emporium.</p>
    <div style="height:30px;"></div>
        <div class="craftwork-item">
            @model ST10256859_CLDV6211_POE.Models.productTBL

            <form action="ProductAdd" method="post" enctype="multipart/form-data">
                <input type="text" name="Name" placeholder="Name of the Product" required>
                <input type="text" name="Category" placeholder="Category of the Product" required>
                <input type="text" name="Description" placeholder="Description of the Product" required>
                <input type="text" name="Price" placeholder="Price of the Product" required>
                <input type="text" name="Quantity" placeholder="Quantity of the Product" required>
                <input type="file" name="ImageFile" placeholder="Image of the Product">
            <button type="submit" style="color: #FFFDD0">Submit</button>
            </form>
        </div>
    <br></br>
</body>
</html>

